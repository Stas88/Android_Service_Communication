<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textForService"
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/start_service"
        android:layout_below="@id/textForService"
        android:text="@string/startService"
        android:onClick="startService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bounded_service_check"
        android:layout_below="@id/start_service"
        android:text="@string/getNumberFromBoundService"
        android:onClick="getNumberFromService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/stop_service"
        android:layout_below="@+id/bounded_service_check"
        android:text="@string/stopService"
        android:onClick="stopService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
