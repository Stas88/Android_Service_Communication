<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textForService"
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/start_service"
        android:layout_below="@id/textForService"
        android:text="@string/startService"
        android:onClick="startService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/start_tabbed_activity"
        android:layout_below="@id/textForService"
        android:layout_toRightOf="@id/start_service"
        android:text="@string/start_tabbed_activity"
        android:onClick="startTabbedActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <Button
        android:id="@+id/stop_service"
        android:layout_below="@+id/start_service"
        android:text="@string/stopService"
        android:onClick="stopService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/start_navigation_activity"
        android:layout_below="@+id/start_tabbed_activity"
        android:layout_toRightOf="@id/stop_service"
        android:text="@string/start_navigation_activity"
        android:onClick="startNavigationActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/see_history"
        android:layout_below="@+id/stop_service"
        android:text="@string/see_hostory"
        android:onClick="seeHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:id="@+id/appUsageService"
        android:text="@string/app_usage_service"
        android:layout_below="@+id/see_history"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/start_app_usage_ыervice"
        android:layout_below="@+id/appUsageService"
        android:text="@string/startService"
        android:onClick="startAppUsageService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/stop_app_usage_service"
        android:layout_below="@+id/start_app_usage_ыervice"
        android:text="@string/stopService"
        android:onClick="stopAppUsageService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageBlured"
        android:layout_below="@+id/stop_app_usage_service"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
